
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<script src="~/Scripts/jquery-3.2.1.js"></script>
<div class="alert alert-success">
    <strong>List Employees</strong>
</div>
<button class="btn btn-primary" data-toggle="modal" data-target="#modal_employees" onclick="clearTextbox();"><i class="material-icons">group_add</i>&nbsp; <span class="super">Add new employee</span></button>
<table id="tbl_emp"
       data-toggle="table"
       data-pagination="true"
       data-search="true"
       data-show-toggle="true"
       data-show-columns="true"
       data-show-export="true"
       data-export-options='{"fileName":"danhsachnhanvien"}'
       data-export-types="['xml','txt','doc','excel']"
       data-sort-order="desc"
       data-page-list="[5, 10, 25, 50, 100, ALL]">
    <thead>
        <tr>
            <th data-field="ID" data-sortable="true">ID</th>
            <th data-field="EmployeeID" data-sortable="true">Employee ID</th>
            <th data-field="Name">Name</th>
            <th data-field="DOB" data-sortable="true">DOB</th>
            <th data-field="Gender" data-sortable="true">Gender</th>
            <th data-field="HomeAddress">Address</th>
            <th data-field="Phone">Phone</th>
            <th data-field="StartDate" data-sortable="true">Start Date</th>
            <th data-field="EndDate" data-sortable="true">End Date</th>
            <th data-field="DepartmentName" data-sortable="true">Department</th>
            <th data-field="action" data-formatter="operateFormatter" data-events="operateEvents">Action</th>
        </tr>
    </thead>
</table>
<ul id="table-employee-context-menu" class="dropdown-menu context-menu">
    <li data-item="edit"><a href="#"><span class="glyphicon glyphicon-edit"></span> Edit</a></li>
    <li data-item="delete"><a href="#"><span class="glyphicon glyphicon-remove"></span> Delete</a></li>
</ul>
<div class="modal fade" id="modal_employees" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <form class="form-horizontal" id="form_employees">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal">×</button>
                    <h4 class="modal-title ctn-title" id="myModalLabel"></h4>
                </div>
                <div class="modal-body">
                    <div class="form-group">
                        <label class="control-label col-sm-3">ID:</label>
                        <div class="col-sm-8">
                            <input type="text" class="form-control" id="emp_code" placeholder="ID" disabled />
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="control-label col-sm-3">Employee ID:</label>
                        <div class="col-sm-8">
                            <input type="text" class="form-control" id="emp_id" placeholder="Employee ID" data-validation="required" />
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="control-label col-sm-3">Name:</label>
                        <div class="col-sm-8">
                            <input type="text" class="form-control" id="emp_name" placeholder="Name" data-validation="required" />
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="control-label col-sm-3">Birth Day:</label>
                        <div class="col-sm-8">
                            <input type='text' class="form-control" id="emp_dob" placeholder="dd/mm/yyyy" data-validation="required" data-validation-format="dd/mm/yyyy" />
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="control-label col-sm-3">Gender:</label>
                        <div class="col-sm-8">
                            <label><input type="radio" name="gender" value="Nam">Nam</label>
                            <label><input type="radio" name="gender" value="Nữ">Nữ</label>
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="control-label col-sm-3">Address:</label>
                        <div class="col-sm-8">
                            <input type="text" class="form-control" id="emp_address" placeholder="Address" data-validation="required" />
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="control-label col-sm-3">Phone:</label>
                        <div class="col-sm-8">
                            <input type="text" class="form-control" id="emp_phone" placeholder="Phone" data-validation-length="max11" data-validation="length,number" data-validation-allowing="float" />
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="control-label col-sm-3">Email:</label>
                        <div class="col-sm-8">
                            <input type="text" class="form-control" id="emp_mail" placeholder="Email" data-validation="email" />
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="control-label col-sm-3">Start Date:</label>
                        <div class="col-sm-8">
                            <input type='text' class="form-control" id="emp_startdate" placeholder="dd/mm/yyyy" data-validation="required" data-validation-format="dd/mm/yyyy" />
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="control-label col-sm-3">End Date:</label>
                        <div class="col-sm-8">
                            <input type='text' class="form-control" id="emp_endate" placeholder="dd/mm/yyyy" data-validation="required" data-validation-format="dd/mm/yyyy" />
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="control-label col-sm-3">Department:</label>
                        <div class="col-sm-8">
                            <select id="emp_depart" class="form-control"></select>
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-primary" id="btnAdd" onclick="insertEmployee(); reset();"><i class="material-icons">add_circle</i>&nbsp; <span class="super">Insert</span></button>
                    <button type="button" class="btn btn-success" style="display:none" id="btnUpdate" onclick="Update();"><i class="material-icons">update</i>&nbsp;<span class="super">Update</span></button>
                    <button type="button" class="btn btn-default" data-dismiss="modal"><i class="material-icons">close</i>&nbsp;<span class="super">Close</span></button>
                </div>
            </form>
        </div>
    </div>
</div>